{% extends "base.html.twig" %}

{% block body %}

<script>
window.onload = function () {
 let totalArrays = document.getElementById('totalArray').textContent;
 totalArrays = totalArray.textContent;
 totalArrays =  JSON.parse(totalArrays);
const chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	exportEnabled: true,
	title:{
		text: "Daily expenses "
	},
	subtitles: [{
		text: "Prices in PLN"
	}],
	data: [{
		type: "pie",
		showInLegend: "true",
		legendText: "{label}",
		indexLabelFontSize: 16,
		indexLabel: "{label} - #percent%",
		yValueFormatString: "#,##0zł",
		dataPoints: totalArrays,
	}]
});

chart.render();
 
}
</script>

<div class="container">
<p id="totalArray" style="display:none;">{{totalArray}} </p>
<div class="mb-3" >
<div id="chartContainer" style="height: 370px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</div>


{# <p>Received : {{dump(data)}} </p>  #}
List of receipts:
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">HEALTHY FOOD</th>
      <th scope="col">UNHEALTHY FOOD</th>
      <th scope="col">FARMACY</th>
      <th scope="col">CLOTHES</th>
      <th scope="col">HOUSEHOLD</th>
      <th scope="col">DATE</th>
    </tr>
  </thead>
  <tbody>
  {% for item in data %}
    <tr>
      <th scope="row">No_{{item.id}} </th>
      <th scope="row"> {{item.healthyFood}} zł</th>
      <th scope="row"> {{item.unhealthyFood}} zł</th>
      <th scope="row"> {{item.farmacy}} zł</th>
      <th scope="row"> {{item.clothing}} zł</th>
      <th scope="row"> {{item.household}} zł</th>
      <th scope="row"> {{item.createdate}} </th>
    </tr>
   {% endfor %}
    
  </tbody>
</table>
</div>



{% endblock %}